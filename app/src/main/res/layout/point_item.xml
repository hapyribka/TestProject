<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/points_list_height"
    android:background="@color/chart_bg_color">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/coordX"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/points_list_half_height"
        android:layout_marginLeft="@dimen/paddings_small"
        android:layout_marginRight="@dimen/paddings_small"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/coordY"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/points_list_half_height"
        android:layout_marginLeft="@dimen/paddings_small"
        android:layout_marginRight="@dimen/paddings_small"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coordX" />

    <View
        android:layout_width="@dimen/divider_width"
        android:layout_height="match_parent"
        android:background="@color/hint_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>